{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:rollup-wasm", "build:viewer-html"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**"]
    },
    "build:rollup-wasm": {
      "inputs": [
        "src/stubs/rollup/rust/**",
        "!src/stubs/rollup/rust/target/**",
        "src/stubs/rollup/src/**"
      ],
      "outputs": ["src/stubs/rollup/wasm/**"]
    },
    "build:viewer-html": {
      "inputs": [],
      "outputs": ["dist/viewer.html"]
    },
    "dev": {
      "dependsOn": ["build:rollup-wasm", "build:viewer-html"],
      "cache": false,
      "persistent": true
    }
  }
}
