{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**"]
    },
    "build:rollup-wasm": {
      "inputs": [
        "src/stubs/rollup/rust/**",
        "!src/stubs/rollup/rust/target/**",
        "src/stubs/rollup/src/**"
      ],
      "outputs": ["src/stubs/rollup/wasm/**"]
    },
    "build:viewer-resource": {
      "inputs": [],
      "outputs": ["dist/viewer/**"]
    },
    "@v/cli-bundle#build": {
      "dependsOn": [
        "^build",
        "@v/cli-bundle#build:rollup-wasm",
        "@v/cli-bundle#build:viewer-resource"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "@v/viola#build": {
      "dependsOn": ["^build"],
      "env": ["VITE_APP_*"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["@v/cli-bundle#build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    }
  }
}
