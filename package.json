{
  "name": "@v/vivliostyle-pub",
  "version": "0.0.0",
  "author": "Vivliostyle Pub",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "check": "biome check .",
    "dev": "turbo dev",
    "fix": "biome check --write .",
    "prepare": "husky",
    "test": "turbo test"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "pnpm": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*": [
      "biome format --write --files-ignore-unknown=true"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "buffer": "patches/buffer.patch"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@swc/core",
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.12.1"
}
